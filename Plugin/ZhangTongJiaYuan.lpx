[Rule]

[Rewrite]
^https:\/\/api.szy.cn\/appOpenServer\/proxy\/config\/openScreenRuleConfigV1 response-body-json-replace body.gardener.push_ad_shutdown 0
^https:\/\/api.szy.cn\/appOpenServer\/proxy\/config\/openScreenRuleConfigV1 response-body-json-replace body.parent.push_ad_shutdown 0
^https:\/\/api.szy.cn\/appOpenServer\/proxy\/config\/openScreenRuleConfigV1 response-body-json-del body.parent.jd_tian_gong_ad_config
^https:\/\/api.szy.cn\/appOpenServer\/proxy\/config\/openScreenRuleConfigV1 response-body-json-replace body.parent.popup_ad_config.show_page []
^https:\/\/api.szy.cn\/appOpenServer\/banner\/getSchoolBanners\/v5.0 response-body-json-replace body.banners []
^https:\/\/api.szy.cn\/growthtask\/topictask\/home\/recommend\/v1.0 response-body-json-replace body.topicTaskList []
^https:\/\/api.szy.cn\/growthproxy\/schoolfeed\/downrefresh\/v3.3 response-body-json-jq '.body.feeds |= map(select(.name != "掌通家园"))'
^https:\/\/api.szy.cn\/appOpenServer\/ad\/post\/v1.0 response-body-json-replace body {}
^https:\/\/api.szy.cn\/appOpenServer\/ad\/post\/v1.3 response-body-json-replace body.data [{}]

[Script]

[MitM]
hostname = api.szy.cn
